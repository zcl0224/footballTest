page{
  height: 100%;
} 
/*设置最外层容器的高度是100%;*/

.myContainer{
  display: flex;
  flex-direction: column;
  height: 100%;
}

/*导航栏的设置*/
.nav{
  height: 44px;
}

.nav ul{
  display: flex;

}

.nav ul li{
  flex:1;
  text-align: center;
  line-height: 44px;
  height: 44px;
  box-sizing: border-box;
}

.nav ul li.active{
  color:#14c145;
  border-bottom: 1px solid #14c145;
}

/*内容区域的设置*/
.content{
  flex:1;
  margin-top: 2px;
}

.content swiper{
  height: 100%;
  
}

swiper-item ul{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-right: 10px;
}

swiper-item scroll-view{
  height: 100%;
}

swiper-item ul li{
  width: 50%;
  box-sizing: border-box;
  padding-left: 10px;
}

swiper-item ul li image{
  width: 100%;
  height: 160px; /*image 标签宽高不会自动 缩放*/
}